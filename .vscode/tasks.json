{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ debug",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/test/MD.out",
                "${workspaceFolder}/src/*cpp", 
                "${workspaceFolder}/src/*/*cpp",
                "${workspaceFolder}/src/*/*/*cpp",
                "-std=c++11",
                "-fopenmp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
            
        },
        {
            "type": "shell",
            "label": "C++ compile O3",
            "command": "g++",
            "args": [
                "-O3",
                "-o",
                "${workspaceFolder}/test/MD.out",
                "${workspaceFolder}/src/*cpp", 
                "${workspaceFolder}/src/*/*cpp",
                "${workspaceFolder}/src/*/*/*cpp",
                "-std=c++11",
                "-fopenmp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}